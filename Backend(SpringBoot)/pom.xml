    <groupId>com.example</groupId>
    <artifactId>labelMark</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <name>labelMark</name>
    <description>Demo project for Spring Boot</description>
    <properties>
        <java.version>11</java.version>
    </properties>
    <dependencies>

        <!--    授权校验模块    -->
        <dependency>
